<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:color="@color/color_button_border_pressed" android:width="2dp" />
            <solid android:color="@color/color_button_background_pressed"/>
            <corners android:radius="5.0dip" />
            <size android:width="100dp" android:height="50dp"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <stroke android:color="#373737" android:width="2dp" />
            <solid android:color="#555555"/>
            <corners android:radius="5.0dip" />
            <size android:width="100dp" android:height="50dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <stroke android:color="@color/color_button_border" android:width="2dp" />
            <solid android:color="@color/color_button_background"/>
            <corners android:radius="5.0dip" />
            <size android:width="100dp" android:height="50dp"/>
        </shape>
    </item>
</selector>
