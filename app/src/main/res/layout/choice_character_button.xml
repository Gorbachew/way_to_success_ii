<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/choice_character_button"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/firstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:text="@string/button_plug"
        tools:ignore="NestedWeights"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="80dp"
        android:layout_marginStart="80dp" />

    <TextView
        android:id="@+id/lastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:text="@string/button_plug"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="80dp"
        android:layout_marginStart="80dp" />

    <TextView
        android:id="@+id/money_rubles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:text="rubles"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="200dp"
        android:layout_marginStart="200dp"/>

    <TextView
        android:id="@+id/money_dollars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:text="dollars"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="200dp"
        android:layout_marginStart="200dp"/>

    <ImageButton
        android:id="@+id/create_user_button_delete"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:scaleType="fitCenter"
        android:background="@drawable/menu_button_round"
        android:src="@drawable/icon_menu_exit"
        android:padding="10dp"
        tools:ignore="RtlHardcoded"
        android:contentDescription="@string/button_plug" />
</FrameLayout>