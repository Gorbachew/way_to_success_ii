<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <ProgressBar
            android:id="@+id/status_bar_food"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/food_status_bar"
            android:progress="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/StatusBarTitle"
            android:text="@string/status_bar_food_title"/>
        <TextView
            android:id="@+id/status_bar_food_percent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/StatusBarPercent"
            android:text="50/50"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <ProgressBar
            android:id="@+id/status_bar_mood"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/mood_status_bar"
            android:progress="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/StatusBarTitle"
            android:text="@string/status_bar_mood_title"/>
        <TextView
            android:id="@+id/status_bar_mood_percent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/StatusBarPercent"
            android:text="50/50"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <ProgressBar
            android:id="@+id/status_bar_health"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/health_status_bar"
            android:progress="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/StatusBarTitle"
            android:text="@string/status_bar_health_title"/>
        <TextView
            android:id="@+id/status_bar_health_percent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/StatusBarPercent"
            android:text="50/50"/>
    </FrameLayout>



</LinearLayout>
